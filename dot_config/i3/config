client.focused #545c7e #545c7e  #1a1b26 #7aa2f7     #7aa2f7
client.unfocused #1a1b26 #1a1b26 #545c7e #7aa2f7     #1a1b26

# kill focused window
bindsym $mod+Shift+q kill

